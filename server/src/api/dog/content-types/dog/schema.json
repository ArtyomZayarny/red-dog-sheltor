{
  "kind": "collectionType",
  "collectionName": "dogs",
  "info": {
    "singularName": "dog",
    "pluralName": "dogs",
    "displayName": "Dog",
    "description": "Shelter dogs available for guardianship or adoption"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "age": {
      "type": "string",
      "required": true
    },
    "gender": {
      "type": "enumeration",
      "enum": ["male", "female"],
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["available", "under_guardianship", "in_family"],
      "default": "available",
      "required": true
    },
    "priceMonthly": {
      "type": "integer",
      "default": 0
    },
    "tags": {
      "type": "json"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "curatorPhone": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
